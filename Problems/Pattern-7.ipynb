    "def pattern(n):\n",
    "    spaces=n-1\n",
    "    pat=1\n",
    "    while spaces>=0:\n",
    "        print(f\"{' '*spaces}{'X'*pat}{' '*spaces}\")\n",
    "        spaces-=1\n",
    "        pat+=2"
   ]
